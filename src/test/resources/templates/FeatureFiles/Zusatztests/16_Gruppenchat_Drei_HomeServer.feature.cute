    @Filter(ApiName2A.hasTag("orgAdmin"))
    @Filter(ApiName3A.hasTag("orgAdmin"))
    @Filter(ApiName1B.hasTag("client"))
    @Filter(ApiName2B.hasTag("client"))
    @Filter(ApiName3B.hasTag("client"))

